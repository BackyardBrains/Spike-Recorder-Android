<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.backyardbrains.view.EmptyRecyclerView
        android:id="@+id/rv_files"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_privacy_policy"/>

    <com.backyardbrains.view.EmptyView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/rv_files"
        app:layout_constraintTop_toTopOf="@+id/rv_files"
        app:layout_constraintRight_toRightOf="@+id/rv_files"
        app:layout_constraintBottom_toBottomOf="@+id/rv_files"/>

    <Button
        android:id="@+id/btn_privacy_policy"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/action_privacy_policy"
        android:background="@color/grey22"
        android:textColor="@color/grey40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>